        </rule>
        <rule type="staticpath">
            <!-- Portable installation -->
            <entry>%ESPATH%\RPCS3\rpcs3.exe</entry>
            <entry>%ESPATH%\..\RPCS3\rpcs3.exe</entry>
        </rule>
    </emulator>
    <emulator name="XEMU">
        <!-- Microsoft Xbox emulator xemu -->
        <rule type="systempath">
            <entry>xemu.exe</entry>
        </rule>
        <rule type="staticpath">
            <!-- Portable installation -->
            <entry>%ESPATH%\xemu\xemu.exe</entry>
            <entry>%ESPATH%\..\xemu\xemu.exe</entry>
        </rule>
    </emulator>
    <emulator name="XENIA">
