<theme>
    <include>./navigationsounds.xml</include>

    <variant name="lightMode, lightModeNoVideos">
        <include>./colors_light.xml</include>
    </variant>

    <variant name="darkMode, darkModeNoVideos">
        <include>./colors_dark.xml</include>
    </variant>

    <view name="system">
        <carousel name="system_carousel">
            <logo>./${system.theme}/images/logo.svg</logo>
            <logoScale>1.23</logoScale>
            <logoSize>0.25 0.125</logoSize>
            <fontPath>./core/fonts/Exo2-RegularCondensed.otf</fontPath>
            <fontSize>0.070</fontSize>
            <letterCase>uppercase</letterCase>
            <lineSpacing>1.2</lineSpacing>
            <text>${system.fullName}</text>
            <maxLogoCount>3</maxLogoCount>
        </carousel>
        <text name="game_counter">
            <fontPath>./core/fonts/Exo2-RegularCondensed.otf</fontPath>
            <fontSize>0.035</fontSize>
            <pos>0.5 0.6437</pos>
            <size>1 0.056</size>
            <origin>0.5 0.5</origin>
            <letterCase>uppercase</letterCase>
            <alignment>center</alignment>
            <metadata>sy_gamecount</metadata>
            <zIndex>50</zIndex>
        </text>
    </view>

    <view name="system">
        <text name="info1, info2, info3, info4, info5, info6, info7,
                    info8, info9, info10, info11, info12">
            <alignment>left</alignment>
            <fontPath>./core/fonts/Exo2-SemiBoldCondensed.otf</fontPath>
            <fontSize>0.021</fontSize>
            <size>0.4 0.03</size>
        </text>
        <image name="consolegame">
            <pos>0.02 0.327</pos>
            <maxSize>0.4 0.28</maxSize>
            <origin>0 1</origin>
        </image>
        <image name="controller">
            <pos>0.78 0.327</pos>
            <maxSize>0.12 0.28</maxSize>
            <origin>1 1</origin>
        </image>
        <text name="info1">
            <pos>0.38 0.695</pos>
        </text>
        <text name="info2">
            <pos>0.38 0.716</pos>
        </text>
        <text name="info3">
            <pos>0.38 0.737</pos>
        </text>
        <text name="info4">
            <pos>0.38 0.758</pos>
        </text>
        <text name="info5">
            <pos>0.38 0.799</pos>
        </text>
        <text name="info6">
            <pos>0.38 0.820</pos>
        </text>
        <text name="info7">
            <pos>0.38 0.841</pos>
        </text>
        <text name="info8">
            <pos>0.38 0.862</pos>
        </text>
        <text name="info9">
            <pos>0.38 0.883</pos>
        </text>
        <text name="info10">
            <pos>0.38 0.904</pos>
        </text>
    </view>

    <view name="system, gamelist">
        <image name="background">
            <tile>true</tile>
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./core/images/background.png</path>
            <zIndex>0</zIndex>
        </image>
        <image name="band1">
            <size>0.03 1</size>
            <pos>0.80 0</pos>
            <origin>0 0</origin>
            <path>./core/images/band.png</path>
            <zIndex>5</zIndex>
        </image>
        <image name="band2">
            <size>0.03 1</size>
            <pos>0.829 0</pos>
            <origin>0 0</origin>
            <path>./core/images/band.png</path>
            <zIndex>5</zIndex>
        </image>
        <image name="band3">
            <size>0.03 1</size>
            <pos>0.858 0</pos>
            <origin>0 0</origin>
            <path>./core/images/band.png</path>
            <zIndex>5</zIndex>
        </image>
        <image name="band4">
            <size>0.03 1</size>
            <pos>0.887 0</pos>
            <origin>0 0</origin>
            <path>./core/images/band.png</path>
            <zIndex>5</zIndex>
        </image>
    </view>

    <aspectRatio name="4:3">
        <view name="gamelist">
            <text name="4:3_temporary">
                <letterCase>uppercase</letterCase>
                <text>4:3 not implemented</text>
                <fontPath>./core/fonts/Exo2-SemiBoldCondensed.otf</fontPath>
                <fontSize>0.03</fontSize>
                <size>0.2 0.04</size>
                <pos>0.84 0.01</pos>
                <color>FFFFFF</color>
            </text>
        </view>
    </aspectRatio>

    <view name="gamelist">
        <image name="consolegame">
            <pos>0.02 0.17</pos>
            <maxSize>0.4 0.15</maxSize>
            <origin>0 1</origin>
        </image>
        <image name="logo">
            <pos>0.78 0.17</pos>
            <maxSize>0.32 0.13</maxSize>
            <origin>1 1</origin>
        </image>
        <text name="md_lbl_playcount, md_playcount">
            <pos>1 1</pos>
        </text>
        <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer,
                    md_lbl_publisher, md_lbl_genre, md_lbl_players,
                    md_lbl_lastplayed">
            <letterCase>uppercase</letterCase>
            <fontPath>./core/fonts/Exo2-BoldCondensed.otf</fontPath>
            <fontSize>0.02</fontSize>
            <size>0.144 0.02</size>
        </text>
        <text name="md_developer, md_publisher, md_genre, md_players">
            <letterCase>uppercase</letterCase>
            <fontPath>./core/fonts/Exo2-RegularCondensed.otf</fontPath>
            <fontSize>0.02</fontSize>
        </text>
        <text name="md_description">
            <container>true</container>
            <metadata>md_description</metadata>
            <letterCase>uppercase</letterCase>
            <fontPath>./core/fonts/Exo2-SemiBoldCondensed.otf</fontPath>
            <fontSize>0.024</fontSize>
        </text>
        <datetime name="md_releasedate, md_lastplayed">
            <letterCase>uppercase</letterCase>
            <fontPath>./core/fonts/Exo2-RegularCondensed.otf</fontPath>
            <fontSize>0.02</fontSize>
            <size>0.144 0.02</size>
        </datetime>
        <textlist name="gamelist">
            <fontPath>./core/fonts/Exo2-BoldCondensed.otf</fontPath>
            <fontSize>0.025</fontSize>
            <letterCase>uppercase</letterCase>
        </textlist>
    </view>

    <!-- All except basic -->
    <view name="gamelist">
        <image name="backframe2">
            <pos>0.02 0.19</pos>
            <size>0.4 0.735</size>
            <origin>0 0</origin>
            <path>./core/images/frame.png</path>
            <zIndex>10</zIndex>
        </image>
        <image name="backframe3">
            <pos>0.44 0.19</pos>
            <size>0.54 0.735</size>
            <origin>0 0</origin>
            <path>./core/images/frame.png</path>
            <zIndex>10</zIndex>
        </image>
        <text name="md_players, md_genre, md_developer, md_publisher">
            <size>0.14 0.023</size>
        </text>
        <text name="md_lbl_releasedate">
            <metadata>Released:</metadata>
            <pos>0.815 0.2755</pos>
        </text>
        <datetime name="md_releasedate">
            <metadata>md_releasedate</metadata>
            <pos>0.83 0.3005</pos>
        </datetime>
        <text name="md_lbl_rating">
            <pos>0.815 0.3355</pos>
        </text>
        <text name="md_lbl_developer">
            <metadata>Developer:</metadata>
            <pos>0.815 0.3355</pos>
        </text>
        <text name="md_developer">
            <metadata>md_developer</metadata>
            <pos>0.83 0.3605</pos>
        </text>
        <text name="md_lbl_publisher">
            <metadata>Publisher:</metadata>
            <pos>0.815 0.3955</pos>
        </text>
        <text name="md_publisher">
            <metadata>md_publisher</metadata>
            <pos>0.83 0.4205</pos>
        </text>
        <text name="md_lbl_genre">
            <metadata>Genre:</metadata>
            <pos>0.815 0.4555</pos>
        </text>
        <text name="md_genre">
            <metadata>md_genre</metadata>
            <pos>0.83 0.4805</pos>
        </text>
        <text name="md_lbl_players">
            <metadata>Players:</metadata>
            <pos>0.815 0.5155</pos>
        </text>
        <text name="md_players">
            <metadata>md_players</metadata>
            <pos>0.83 0.5405</pos>
        </text>
        <text name="md_lbl_lastplayed">
            <metadata>Last played:</metadata>
            <pos>0.815 0.5755</pos>
        </text>
        <datetime name="md_lastplayed">
            <metadata>md_lastplayed</metadata>
            <pos>0.83 0.6005</pos>
        </datetime>
        <text name="md_lbl_rating">
            <pos>1 1</pos>
            <fontPath>./core/fonts/blank.ttf</fontPath>
        </text>
        <rating name="md_rating">
            <pos>0.453 0.203</pos>
            <filledPath>./core/images/rating_filled.svg</filledPath>
            <unfilledPath>./core/images/rating_empty.svg</unfilledPath>
            <size>0.04 0.03</size>
        </rating>
        <text name="md_description">
            <lineSpacing>1.2</lineSpacing>
            <pos>0.454 0.675</pos>
            <size>0.346 0.235</size>
            <fontSize>0.02</fontSize>
        </text>
        <textlist name="gamelist">
            <pos>0.025 0.201</pos>
            <size>0.39 0.711</size>
            <alignment>left</alignment>
            <horizontalMargin>0.01</horizontalMargin>
        </textlist>
        <gamelistinfo name="gamelistInfo">
            <fontPath>./core/fonts/Exo2-BoldCondensed.otf</fontPath>
            <fontSize>0.025</fontSize>
            <size>0.2 0.1</size>
            <pos>0.773 0.162</pos>
            <alignment>right</alignment>
        </gamelistinfo>
        <badges name="md_badges">
            <pos>0.880 0.757</pos>
            <size>0.13 0.1635</size>
            <origin>0.5 0.5</origin>
            <alignment>left</alignment>
            <direction>row</direction>
            <lines>2</lines>
            <itemsPerLine>3</itemsPerLine>
            <controllerPos>0.5 0.572</controllerPos>
            <controllerSize>0.81</controllerSize>
            <itemMargin>-1.0 0.005</itemMargin>
            <slots>favorite, completed, kidgame, broken, controller, altemulator</slots>
        </badges>
    </view>

    <variant name="noMedia">
        <view name="gamelist">
            <image name="backframe1">
                <pos>0.02 0.19</pos>
                <size>0.96 0.735</size>
                <origin>0 0</origin>
                <path>./core/images/frame.png</path>
            </image>
            <textlist name="gamelist">
                <pos>0.04 0.201</pos>
                <size>0.92 0.71</size>
                <alignment>center</alignment>
                <horizontalMargin>0.01</horizontalMargin>
            </textlist>
        </view>
    </variant>

    <variant name="lightModeNoVideos, darkModeNoVideos">
        <view name="gamelist">
            <image name="md_image">
                <origin>0.5 0.5</origin>
                <pos>0.63 0.45</pos>
                <maxSize>0.360 0.424</maxSize>
                <metadata>md_image</metadata>
                <scrollFadeIn>true</scrollFadeIn>
            </image>
        </view>
    </variant>

    <variant name="lightMode darkMode">
        <view name="gamelist">
            <video name="md_video">
                <origin>0.5 0.5</origin>
                <pos>0.63 0.45</pos>
                <imageMetadata>md_image</imageMetadata>
                <maxSize>0.356 0.424</maxSize>
                <delay>1.7</delay>
                <scrollFadeIn>true</scrollFadeIn>
            </video>
        </view>
    </variant>
</theme>